<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="#FFE67868" />
            <corners android:bottomLeftRadius="20dip" android:bottomRightRadius="20dip" android:topLeftRadius="20dip" android:topRightRadius="20dip" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#88E67868" />
            <stroke android:width="2dp" android:color="#FFE67868" />
            <corners android:bottomLeftRadius="20dip" android:bottomRightRadius="20dip" android:topLeftRadius="20dip" android:topRightRadius="20dip" />
        </shape>
    </item>

</selector>